{
  "$schema": "https://json.schemastore.org/package",
  "name": "use-typed-event-listener",
  "version": "3.0.0",
  "description": "React Hook for DOM event listeners with TypeScript supported",
  "keywords": [
    "document",
    "event",
    "event-listener",
    "hooks",
    "react",
    "react-hooks",
    "typed",
    "typescript",
    "window"
  ],
  "homepage": "https://github.com/foray1010/use-typed-event-listener",
  "bugs": "https://github.com/foray1010/use-typed-event-listener/issues",
  "repository": "foray1010/use-typed-event-listener",
  "license": "MIT",
  "author": "foray1010",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "yarn clean:build",
    "build": "tsc --project tsconfig.build.json && rollup -c",
    "ci": "npm-run-all -p 'lint:*' 'type:*' && yarn test && yarn build && size-limit",
    "clean:build": "shx rm -rf dist/ build/dts/",
    "eslint": "eslint --ext=cjs,js,mjs,ts,tsx --ignore-path=node_modules/@foray1010/eslint-config/eslintignore",
    "lint": "npm-run-all -p 'lint:*'",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prepublishOnly": "yarn ci",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=node_modules/@foray1010/remark-preset/remarkignore --ignore-path-resolve-from=cwd",
    "test": "jest",
    "type:check": "tsc",
    "type:coverage": "type-coverage --strict --at-least 100 --detail --ignore-catch"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.2",
    "use-deep-compare": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@foray1010/babel-preset": "6.1.0",
    "@foray1010/eslint-config": "4.4.1",
    "@foray1010/prettier-config": "4.1.2",
    "@foray1010/remark-preset": "3.4.1",
    "@foray1010/tsconfig": "4.1.1",
    "@rollup/plugin-babel": "5.2.3",
    "@size-limit/preset-small-lib": "4.9.1",
    "@testing-library/react": "11.2.3",
    "@testing-library/react-hooks": "5.0.3",
    "@types/jest": "26.0.20",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "eslint": "7.18.0",
    "husky": "4.3.8",
    "ignore-sync": "3.0.1",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-test-renderer": "17.0.1",
    "remark-cli": "9.0.0",
    "rollup": "2.38.0",
    "rollup-plugin-dts": "2.0.1",
    "rollup-plugin-terser": "7.0.2",
    "shx": "0.3.3",
    "size-limit": "4.9.1",
    "ts-node": "9.1.1",
    "type-coverage": "2.14.9",
    "typescript": "4.1.3"
  },
  "peerDependencies": {
    "react": ">=16.14.0",
    "typescript": ">=4.1.2"
  },
  "engines": {
    "node": ">=10.13"
  }
}
