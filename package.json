{
  "name": "use-typed-event-listener",
  "version": "1.3.1",
  "description": "React Hook for DOM event listeners with TypeScript supported",
  "keywords": [
    "document",
    "event",
    "event-listener",
    "hooks",
    "react",
    "react-hooks",
    "typed",
    "typescript",
    "window"
  ],
  "homepage": "https://github.com/foray1010/use-typed-event-listener",
  "bugs": "https://github.com/foray1010/use-typed-event-listener/issues",
  "repository": "foray1010/use-typed-event-listener",
  "license": "MIT",
  "author": "foray1010",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "yarn clean:build",
    "build": "tsc && rollup -c rollup.config.ts",
    "ci": "npm-run-all -p build lint:* type:* test && size-limit",
    "clean:build": "shx rm -rf dist/ build-dts/",
    "eslint": "eslint --ext=cjs,js,mjs,ts,tsx --ignore-path=node_modules/@foray1010/eslint-config/eslintignore",
    "lint": "npm-run-all -p lint:*",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prepublishOnly": "yarn ci",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=.gitignore",
    "test": "jest --config .jestrc.json",
    "type:check": "tsc --noEmit --project ./tsconfig.typecheck.json",
    "type:coverage": "type-coverage --strict --at-least 100 --detail --ignore-catch"
  },
  "dependencies": {
    "fast-equals": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@babel/preset-env": "7.6.3",
    "@babel/preset-typescript": "7.6.0",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@foray1010/eslint-config": "1.8.3",
    "@foray1010/import-sort-config": "1.2.1",
    "@foray1010/prettier-config": "1.5.1",
    "@foray1010/remark-preset": "1.1.2",
    "@size-limit/preset-small-lib": "2.1.6",
    "@testing-library/dom": "6.10.0",
    "@testing-library/react-hooks": "3.1.1",
    "@types/babel__core": "7.1.3",
    "@types/eslint": "6.1.3",
    "@types/jest": "24.0.21",
    "@types/prettier": "1.18.3",
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.3",
    "@types/react-test-renderer": "16.9.1",
    "@types/testing-library__dom": "6.10.0",
    "@types/testing-library__react-hooks": "3.1.0",
    "eslint": "6.6.0",
    "husky": "3.0.9",
    "ignore-sync": "2.0.1",
    "import-sort-cli": "6.0.0",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "react-test-renderer": "16.11.0",
    "remark-cli": "7.0.0",
    "rollup": "1.25.2",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-dts": "1.1.10",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-terser": "5.1.2",
    "shx": "0.3.2",
    "sort-package-json": "1.22.1",
    "type-coverage": "2.3.0",
    "typescript": "3.6.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "typescript": ">=3.5.1"
  },
  "engines": {
    "node": ">=8.9"
  }
}
