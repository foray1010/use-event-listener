{
  "name": "use-typed-event-listener",
  "version": "2.0.1",
  "description": "React Hook for DOM event listeners with TypeScript supported",
  "keywords": [
    "document",
    "event",
    "event-listener",
    "hooks",
    "react",
    "react-hooks",
    "typed",
    "typescript",
    "window"
  ],
  "homepage": "https://github.com/foray1010/use-typed-event-listener",
  "bugs": "https://github.com/foray1010/use-typed-event-listener/issues",
  "repository": "foray1010/use-typed-event-listener",
  "license": "MIT",
  "author": "foray1010",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "yarn clean:build",
    "build": "tsc && rollup -c rollup.config.ts",
    "ci": "npm-run-all -p build lint:* type:* test && size-limit",
    "clean:build": "shx rm -rf dist/ build/dts/",
    "eslint": "eslint --ext=cjs,js,mjs,ts,tsx --ignore-path=node_modules/@foray1010/eslint-config/eslintignore",
    "lint": "npm-run-all -p lint:*",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "prepublishOnly": "yarn ci",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=node_modules/@foray1010/remark-preset/remarkignore --ignore-path-resolve-from=cwd",
    "test": "jest --config .jestrc.json",
    "type:check": "tsc --noEmit --project ./tsconfig.typecheck.json",
    "type:coverage": "type-coverage --strict --at-least 100 --detail --ignore-catch"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "fast-equals": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/plugin-transform-runtime": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-typescript": "7.9.0",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@foray1010/eslint-config": "2.3.2",
    "@foray1010/prettier-config": "4.0.1",
    "@foray1010/remark-preset": "3.0.2",
    "@rollup/plugin-babel": "5.0.2",
    "@rollup/plugin-replace": "2.2.1",
    "@size-limit/preset-small-lib": "4.5.0",
    "@testing-library/react": "10.0.4",
    "@testing-library/react-hooks": "3.2.1",
    "@types/jest": "25.2.2",
    "@types/react": "16.9.34",
    "@types/testing-library__dom": "7.0.2",
    "@types/testing-library__react-hooks": "3.2.0",
    "eslint": "7.0.0",
    "husky": "4.2.5",
    "ignore-sync": "2.0.1",
    "jest": "26.0.1",
    "lint-staged": "10.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-test-renderer": "16.13.1",
    "remark-cli": "8.0.0",
    "rollup": "2.7.6",
    "rollup-plugin-dts": "1.4.6",
    "rollup-plugin-terser": "5.3.0",
    "shx": "0.3.2",
    "size-limit": "4.5.0",
    "sort-package-json": "1.42.2",
    "type-coverage": "2.6.1",
    "typescript": "3.9.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "typescript": ">=3.5.1"
  },
  "engines": {
    "node": ">=10.13"
  }
}
